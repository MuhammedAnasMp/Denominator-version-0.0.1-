<UserControl x:Class="Deno.Views.ConfigPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:Deno.Services"
             Width="780" Height="400">
    <ScrollViewer>
        <StackPanel Margin="25" VerticalAlignment="Top" HorizontalAlignment="Stretch" >

            <TextBlock Text="Currency" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="CurrencyPicker"
                      Width="200"
                      SelectionChanged="CurrencyPicker_SelectionChanged"/>

            <TextBlock Text="Location Code" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Text="{Binding Source={x:Static services:GlobalStateService.Instance}, Path=LocCode, Mode=TwoWay}" Width="200"/>

            <TextBlock Text="POS Number" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Text="{Binding Source={x:Static services:GlobalStateService.Instance}, Path=PosNumber, Mode=TwoWay}" Width="200"/>

            <TextBlock Text="Domain Name" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox Text="{Binding Source={x:Static services:GlobalStateService.Instance}, Path=DomainName, Mode=TwoWay}" Width="200"/>

            <Button Content="Save" Width="100" Margin="0,20,0,0" Click="OnSaveClicked"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
