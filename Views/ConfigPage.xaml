<UserControl x:Class="Deno.Views.ConfigPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:Deno.Services"
             xmlns:local="clr-namespace:Deno.Behaviors"
             Width="780" Height="600">

	<UserControl.Resources>
		<!-- Modern TextBox Style -->
		<Style x:Key="ModernTextBox" TargetType="TextBox">
			<Setter Property="Height" Value="36"/>
			<Setter Property="Padding" Value="8,4"/>
			<Setter Property="BorderBrush" Value="#d1d5db"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Background" Value="White"/>
			<Setter Property="Foreground" Value="Black"/>
			<Setter Property="CaretBrush" Value="Black"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
							<ScrollViewer x:Name="PART_ContentHost"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsFocused" Value="True">
								<Setter Property="BorderBrush" Value="#4f46e5"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Modern Button Style -->
		<Style x:Key="ModernButton" TargetType="Button">
			<Setter Property="Background" Value="#4f46e5"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="16,8"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#3730a3"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#312e81"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</UserControl.Resources>

	<ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="0" MinHeight="600">
		<StackPanel Margin="20" Width="400">
			<TextBlock Text="Currency" FontWeight="Bold" Margin="0,0,0,5"/>
			<ComboBox x:Name="CurrencyPicker"
                      Height="36"
                      Margin="0,0,0,10"
                      SelectionChanged="CurrencyPicker_SelectionChanged"/>

			<TextBlock Text="Device IP" FontWeight="Bold" Margin="0,10,0,5"/>
			<TextBox x:Name="DeviceIpTextBox"
                     IsReadOnly="True"
                     Style="{StaticResource ModernTextBox}"/>
			
			<TextBlock Text="Location Code" FontWeight="Bold" Margin="0,10,0,5"/>
			<TextBox Text="{Binding Source={x:Static services:GlobalStateService.Instance}, Path=LocCode, Mode=TwoWay}"
                     Style="{StaticResource ModernTextBox}"/>

			

			<TextBlock Text="Location Name" FontWeight="Bold" Margin="0,10,0,5"/>
			<TextBox Text="{Binding Source={x:Static services:GlobalStateService.Instance}, Path=LocName, Mode=TwoWay}"
                     Style="{StaticResource ModernTextBox}"/>

			<TextBlock Text="POS Number" FontWeight="Bold" Margin="0,10,0,5"/>
			<TextBox Text="{Binding Source={x:Static services:GlobalStateService.Instance}, Path=PosNumber, Mode=TwoWay}"
                     Style="{StaticResource ModernTextBox}"/>

			<TextBlock Text="Printer Name" FontWeight="Bold" Margin="0,10,0,5"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<TextBox Grid.Column="0"
                         x:Name="PrinterNameTextBox"
                         Text="{Binding Source={x:Static services:GlobalStateService.Instance}, Path=PrinterName, Mode=TwoWay}"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,10,0"/>
				<Button Grid.Column="1"
                        Content="Test"
                        Style="{StaticResource ModernButton}"
                        Width="100"
                        Click="OnTestPrinterClicked"/>
			</Grid>

			<TextBlock Text="Domain Name" FontWeight="Bold" Margin="0,10,0,5"/>
			<TextBox Text="{Binding Source={x:Static services:GlobalStateService.Instance}, Path=DomainName, Mode=TwoWay}"
                     Style="{StaticResource ModernTextBox}"/>

			<TextBlock Text="" FontWeight="Bold" Margin="0,10,0,5"/>
			<Button Content="Save"
                    Style="{StaticResource ModernButton}"
                    Width="286"
                    Click="OnSaveClicked"/>

			<!-- Add extra space to increase scrollable area -->
			<TextBlock Height="300"/>
		</StackPanel>
	</ScrollViewer>
</UserControl>