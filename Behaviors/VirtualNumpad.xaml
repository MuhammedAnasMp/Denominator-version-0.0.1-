<UserControl x:Class="Deno.Behaviors.VirtualNumpad" 
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Row 1 -->
        <Button Content="7" Grid.Row="1" Grid.Column="0" Click="NumberButton_Click" Focusable="False" />
        <Button Content="8" Grid.Row="1" Grid.Column="1" Click="NumberButton_Click" Focusable="False" />
        <Button Content="9" Grid.Row="1" Grid.Column="2" Click="NumberButton_Click" Focusable="False" />
        <Button Content="X" Grid.Row="1" Grid.Column="3" Click="ClearButton_Click" Focusable="False" />

        <!-- Row 2 -->
        <Button Content="4" Grid.Row="2" Grid.Column="0" Click="NumberButton_Click" Focusable="False" />
        <Button Content="5" Grid.Row="2" Grid.Column="1" Click="NumberButton_Click" Focusable="False" />
        <Button Content="6" Grid.Row="2" Grid.Column="2" Click="NumberButton_Click" Focusable="False" />
        <Button Content="CC" Grid.Row="2" Grid.Column="3" Click="ClearAllButton_Click" Focusable="False" />

        <!-- Row 3 -->
        <Button Content="1" Grid.Row="3" Grid.Column="0" Click="NumberButton_Click" Focusable="False" />
        <Button Content="2" Grid.Row="3" Grid.Column="1" Click="NumberButton_Click" Focusable="False" />
        <Button Content="3" Grid.Row="3" Grid.Column="2" Click="NumberButton_Click" Focusable="False" />
        <Button Content="Tab" Grid.Row="3" Grid.Column="3" Click="TabButton_Click" Focusable="False" />

        <!-- Row 4 -->
        <Button Content="0" Grid.Row="4" Grid.Column="0" Click="NumberButton_Click" Focusable="False" />
        <Button Content="00" Grid.Row="4" Grid.Column="1" Click="NumberButton_Click" Focusable="False" />
        <Button Content="." Grid.Row="4" Grid.Column="2" Click="NumberButton_Click" Focusable="False" />
        <Button Content="Enter" Grid.Row="4" Grid.Column="3" Click="EnterButton_Click" Focusable="False" />
    </Grid>
</UserControl>