<Window x:Class="Deno.Services.AuthDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manager Authentication" 
        Height="180" 
        Width="280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Manager Authentication Required" 
                   Margin="0,0,0,8" FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <!-- Username -->
        <Label Grid.Row="1" Grid.Column="0" Content="Username:" 
               Margin="0,0,4,4" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Height="22" 
                 Text="{Binding Username}" Margin="0,0,0,4"/>

        <!-- Password -->
        <Label Grid.Row="2" Grid.Column="0" Content="Password:" 
               Margin="0,0,4,8" VerticalAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" 
                     Height="22" Margin="0,0,0,8"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Login" Width="70" Margin="0,0,6,0" Click="Login_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="70" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>