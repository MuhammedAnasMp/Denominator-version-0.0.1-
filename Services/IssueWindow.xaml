<Window x:Class="Deno.Services.IssueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Share Your Thoughts To Improve"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F7F9FB"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        >
    <Window.Resources>
        <!-- Shadow Effect -->
        <DropShadowEffect x:Key="MaterialDesignShadow" 
                         ShadowDepth="1" 
                         Direction="315" 
                         Color="Black" 
                         Opacity="0.2" 
                         BlurRadius="4"/>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Effect" Value="{StaticResource MaterialDesignShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005EA6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003087"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2D3748"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <!-- ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton x:Name="ToggleButton" 
                                                  Grid.Column="0" Grid.ColumnSpan="2"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Background="Transparent"
                                                  BorderThickness="0"/>
                                    <ContentPresenter x:Name="ContentSite"
                                                     Grid.Column="0"
                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                     HorizontalAlignment="Left"
                                                     VerticalAlignment="Center"
                                                     Margin="{TemplateBinding Padding}"/>
                                    <Path Grid.Column="1"
                                          Data="M 0 0 L 6 6 L 12 0 Z"
                                          Fill="#2D3748"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Margin="0,0,8,0"/>
                                </Grid>
                            </Border>
                            <Popup x:Name="Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True">
                                <Border MaxHeight="200"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        Background="White"
                                        BorderBrush="#D1D5DB"
                                        BorderThickness="1"
                                        CornerRadius="4"
                                        Effect="{StaticResource MaterialDesignShadow}">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Issue Type -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tell us about a:"/>
        <ComboBox x:Name="cmbCategory" Grid.Row="0" Grid.Column="1" Width="250" HorizontalAlignment="Left">
            <ComboBoxItem Content="Feature" IsSelected="True"/>
            <ComboBoxItem Content="Requirement"/>
            <ComboBoxItem Content="Bug"/>
            <ComboBoxItem Content="Comment"/>
        </ComboBox>

        <!-- Message -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Message:" Margin="0,20,10,0"/>
            <TextBox x:Name="txtMessage" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" 
         Margin="0,20,0,0" TextWrapping="Wrap" AcceptsReturn="True" 
         VerticalScrollBarVisibility="Auto"
         GotFocus="TxtMessage_GotFocus" LostFocus="TxtMessage_LostFocus"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Clear" Width="120" Click="Clear_Click"/>
            <Button Content="Send" Width="120" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>

    
    